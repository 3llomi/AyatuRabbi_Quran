<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    tools:background="@color/colorPrimary">


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_surah_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:drawableRight="@drawable/ic_reading_quran"
        android:drawablePadding="8dp"
        android:fontFamily="@font/cairo_black"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="البقرة" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_page_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginRight="16dp"
        android:drawableRight="@drawable/ic_article"
        android:drawablePadding="8dp"
        android:fontFamily="@font/cairo_regular"
        android:textColor="@color/colorOnSecondary"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_surah_name"
        tools:text="3" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_note"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginRight="16dp"
        android:drawableRight="@drawable/ic_note"
        android:drawablePadding="8dp"
        android:fontFamily="@font/cairo_regular"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_page_number"
        tools:text="لا يوجد" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:fontFamily="@font/cairo_regular"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="16/10/2020" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_delete_bookmark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="32dp"
        android:backgroundTint="@color/colorSecondary"
        android:paddingLeft="32dp"
        android:paddingRight="32dp"
        android:text="@string/delete"
        android:textColor="@color/white"
        app:icon="@drawable/ic_clear"
        app:iconGravity="textEnd"
        app:iconTint="@color/colorOnError"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_note" />
</androidx.constraintlayout.widget.ConstraintLayout>