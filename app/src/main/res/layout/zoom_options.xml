<com.warkiz.tickseekbar.TickSeekBar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/seekbar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    app:tsb_max="100"
    app:tsb_min="0"
    app:tsb_show_tick_marks_type="oval"
    app:tsb_show_tick_texts="above"
    app:tsb_thumb_color="@color/colorSecondary"
    app:tsb_thumb_size="16dp"
    app:tsb_tick_marks_color="@color/white"
    app:tsb_tick_marks_size="10dp"
    app:tsb_tick_texts_color="@color/colorOnSecondary"
    app:tsb_tick_texts_size="13sp"
    app:tsb_ticks_count="11"
    app:tsb_track_background_color="@color/dkgray"
    app:tsb_track_background_size="3dp"
    app:tsb_track_progress_color="@color/colorSecondaryVariant"
    app:tsb_track_progress_size="3dp" />