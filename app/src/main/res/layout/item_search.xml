<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:paddingBottom="16dp">

    <TextView
        android:id="@+id/tv_ayah"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/cairo_font"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="الحمد لله رب العالمين" />


    <TextView
        android:id="@+id/tv_page_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:drawableRight="@drawable/ic_article"
        android:drawablePadding="8dp"
        android:drawableTint="@color/white"
        android:fontFamily="@font/cairo_font"
        android:textColor="@color/colorOnSecondary"
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@+id/tv_ayah_number"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_ayah"
        tools:text="20" />

    <TextView
        android:id="@+id/tv_ayah_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:drawableRight="@drawable/ic_star_ayah"
        android:drawablePadding="8dp"
        android:drawableTint="@color/white"
        android:fontFamily="@font/cairo_font"
        android:textColor="@color/colorOnSecondary"
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@+id/tv_surah_name"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toEndOf="@+id/tv_page_number"
        app:layout_constraintTop_toBottomOf="@id/tv_ayah"
        tools:text="20" />

    <TextView
        android:id="@+id/tv_surah_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginRight="16dp"
        android:drawableRight="@drawable/ic_reading_quran"
        android:drawablePadding="8dp"
        android:drawableTint="@color/white"
        android:fontFamily="@font/cairo_font"
        android:textColor="@color/colorOnSecondary"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toEndOf="@+id/tv_ayah_number"
        app:layout_constraintTop_toBottomOf="@id/tv_ayah"
        tools:text="20" />
</androidx.constraintlayout.widget.ConstraintLayout>